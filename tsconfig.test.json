{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "isolatedModules": true,
     "module": "CommonJS",
    "target": "es2017",
    "baseUrl": "./",
    "paths": {
      "#*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "test/**/*.ts",
    "test/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}